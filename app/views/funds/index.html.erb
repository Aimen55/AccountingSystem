<div class="jumbotron jumbotron-fluid">
<div class="container text-center ">
<h1>FUNDS</h1>
</div>
</div>

<div class="container">
  <div class="col-md-12">
    <table id="funds_table" class="table table-striped table-bordered" style="width:100%">
<thead>
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th ></th>
        <th></th>
        
	</tr>
</thead>


  <tbody>
	<% @funds.each do |fund|%>
	<tr>
		<td><%= fund.name %></td>
		<td><%= fund.description %></td>
		<td><%= link_to 'Show', fund_path(fund) %></td>
		<td><%= link_to 'Create Ledger', new_ledger_path %></td>
	</tr>
 
	<% end %>
   </tbody>


 </table>
</div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
      $('#funds_table').DataTable();
  } );
</script>
