<div class="jumbotron jumbotron-fluid">
<div class="container text-center">
    <h1>General Ledgers</h1>
</div>
</div>





<div class="container">
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <p class="navbar-text pull-right">
      <%= link_to "New Ledger", new_ledger_path %>
    </p>
  </div>
  </nav>
<div class="col-md-12">
    <table id="ledgers_table" class="table table-striped table-bordered" style="width:100%">
 <thead>
  <tr>
    <th>Value</th>
    <th>Effective Date</th>
    <th>Fund Name</th>
    <th>Account Name</th>
    <th>Account Type</th>
    <th ></th>
    <th></th>
    <th></th>
  </tr>
</thead>

<tbody>
  <% @ledgers.each do |ledger|%>
    <tr>
      <td><%= ledger.value   %></td>
      <td><%= format_datetime(ledger.effective_date)  %></td>
      <td><%= ledger.fund.name  %></td>
      <td><%= ledger.account.name  %></td>
      <td><%= ledger.account.name  %></td>
      <!-- <td><%#= ledger.account.account_type.name  %></td> -->
      <td><%= link_to 'show',ledger_path(ledger) %></td>
      <td><%= link_to 'Edit', edit_ledger_path(ledger) %></td>
      <td><%= link_to 'Destroy', ledger_path(ledger),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
     <% end %>
</tbody>
</table>
</div>

<br>


</div>

<script type="text/javascript">
  $(document).ready(function() {
      $('#ledgers_table').DataTable();
  } );
</script>