<div class="container text-center">
    <h1>Accounts</h1>
</div>
</div>

<div class="container">
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <p class="navbar-text pull-right">
     <%= link_to "new Account", new_account_path %>
    </p>
  </div>
  </nav>
  <div class="col-md-12">
    <table id="accounts_table" class="table table-striped table-bordered" style="width:100%">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Picture</th>
          <th ></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @accounts.each do |account|%>
          <tr>
            <td><%= account.name   %></td>
            <td><%= account.description   %></td>
            <!-- <td>< #%= image_tag url_for(account.picture) rescue '' %></td> -->
            <!-- <td><%# if account.picture.attached? %> -->
                  <%#= image_tag url_for(account.picture)  %>
                <%#else %>
                  <!-- <div class="text-align-center img-place-holder"> -->
                       <!-- self.picture.attach(io: File.open(Rails.root.join("app", "assets", "images", "default.jpeg")), filename: 'default.jpg' , content_type: "image/jpg") -->
                  <!-- </div> -->
                <!-- <%# end %></td> -->
            <td><%= image_tag(account.picture , class: 'card-img-top img-fluid') rescue '' %></td>
            <td><%= link_to 'show',account_path(account) %></td>
            <td><%= link_to 'Edit', edit_account_path(account) %></td>
            <td><%= link_to 'Destroy', account_path(account),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
          </tr>
           <% end %>   
      </tbody>
    </table>
  </div>

<br>

</div>

<script type="text/javascript">
  $(document).ready(function() {
      $('#accounts_table').DataTable();
  } );
</script>