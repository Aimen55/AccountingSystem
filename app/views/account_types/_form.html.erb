<div class="container">
<% if @account_type.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@account_type.errors.count, "error") %> prohibited
      this account from being saved:
    </h2>
    <ul>
      <% @account_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @account_type, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <br>
  <h3>Account</h3>
  <%= form.fields_for :accounts do |a| %>
    <p>
      <%= a.label :name %>
      <%= a.text_field :name %>
    </p>

    <p>
      <%= a.label :description %>
      <%= a.text_field :description %>
    </p>

  <% end %>
  <p>
    <%= form.submit %>
  </p>


<% end %>
</div>
  
